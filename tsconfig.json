{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "outDir": "./dist",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "src",
        "baseUrl": "./",
        "lib": [
            "dom",
            "es2017"
        ],
        "paths": {
            "next-prepare": [ "src/*" ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "examples/**/*",
        "src/**/*.test.*",
        "**/__tests__/**",
        "**/__mocks__/**"
    ]
}